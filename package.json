{
  "name": "gif2vid",
  "version": "0.0.1",
  "description": "Convert GIF animations to optimized MP4 videos. Works in Node.js and browsers with WebCodecs support.",
  "homepage": "https://github.com/shaneosullivan/gif2vid",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaneosullivan/gif2vid"
  },
  "license": "MIT",
  "author": {
    "name": "Shane O'Sullivan",
    "email": "shaneosullivan1@gmail.com"
  },
  "type": "module",
  "main": "./lib/index.js",
  "browser": "./lib/browser/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "gif2vid": "./lib/cli.js"
  },
  "files": [
    "lib",
    "converter/wasm"
  ],
  "scripts": {
    "build": "npm run build:wasm && tsdown src/index.ts src/cli.ts -d lib --target=node24 && npm run build:browser && npm run build:browser:standalone",
    "build:browser": "node esbuild.browser.mjs && tsc src/index.ts --declaration --emitDeclarationOnly --outDir lib/browser --module esnext --moduleResolution bundler",
    "build:browser:standalone": "node esbuild.browser.standalone.mjs",
    "build:node": "tsdown src/index.ts src/cli.ts -d lib --target=node24",
    "build:wasm": "./scripts/buildConverter.sh",
    "format": "prettier --experimental-cli --write .",
    "format:wasm": "prettier --experimental-cli --write 'converter/wasm/**/*.js'",
    "lint": "eslint --cache .",
    "lint:format": "prettier --experimental-cli --cache --check .",
    "test": "npm-run-all --parallel tsc:check lint lint:format vitest:run",
    "tsc:check": "tsc",
    "vitest:run": "vitest run"
  },
  "dependencies": {
    "h264-mp4-encoder": "^1.0.12",
    "omggif": "^1.0.10"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@nkzw/eslint-config": "^3.2.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/node": "^24.7.2",
    "@types/omggif": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "file-type": "^21.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "tsdown": "^0.15.7",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
